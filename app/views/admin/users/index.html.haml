%h1 Listing users

%table
  %tr
    %th Name
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td
        = link_to 'Edit', [:edit, :admin, user]
        = link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete

%br

%div{:class => "btn primary"}= link_to 'New User', new_admin_user_path
